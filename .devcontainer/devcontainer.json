{
  "name": "Brute Force AI Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  // Features to install - this provides common tools
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/danzilberdan/devcontainers/opencode:0": {}
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "supabase.supabase-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  },

  // Set environment variables
  "remoteEnv": {
    "SUPABASE_URL": "http://localhost:54321",
    "PATH": "/home/node/.bun/bin:/home/node/.deno/bin:/home/node/.supabase/bin:${containerEnv:PATH}"
    // Note: SUPABASE_ANON_KEY is dynamically generated by 'supabase start'
    // Users should copy it to .env.local after running 'supabase start'
  },

  // Forward ports for development
  "forwardPorts": [
    3000,     // Next.js dev server
    54321,    // Supabase API
    54322,    // Supabase DB
    54323,    // Supabase Studio
    54324,    // Supabase Inbucket (email testing)
    54325,    // Supabase Storage
    54326     // Supabase Auth
  ],

  // Port attributes
  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "notify"
    },
    "54321": {
      "label": "Supabase API",
      "onAutoForward": "silent"
    },
    "54322": {
      "label": "Supabase DB",
      "onAutoForward": "silent"
    },
    "54323": {
      "label": "Supabase Studio",
      "onAutoForward": "notify"
    }
  },

  // Commands to run after container creation
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Mount OpenCode auth file if it exists on host
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.local/share/opencode/auth.json,target=/mnt/opencode-auth.json,type=bind,consistency=cached"
  ],

  // Use 'node' user for better security
  "remoteUser": "node",

  // Additional container options
  "containerEnv": {
    "SHELL": "/bin/bash"
  }
}
